<div class="container">
<div class="row">
  <div class="col-sm-12 col-md-3 col-lg-3"></div>
  <div class="col-sm-12 col-md-6 col-lg-6">
    <h1>Create And Devour A Burger</h1>
  </div>
  <div class="col-sm-12 col-md-3 col-lg-3"></div>
</div>

<br><br>
<div class="row">
<div class="col-sm-12 col-md-4 col-md-4">

   <h2>Burgers</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burger/burger-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>

</div>
<div class="col-sm-12 col-md-4 col-md-4">
<h2>Creat A Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="burg">Create A Burger</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="dev">Devour it?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured<br>
    <input type="radio" name="devoured" value="0" id="not-devoured"> Not Devoured
  </div>

  <button type="submit">create burger</button>
</form>



</div>
<div class="col-sm-12 col-md-4 col-md-4">

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burger/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>
</div>
</div>


</div>
